# Basic setup with popular plugins

# git clone https://github.com/ohmyzsh/ohmyzsh.git ~/.oh-my-zsh
# git clone https://github.com/zsh-users/zsh-autosuggestions ~/.oh-my-zsh/custom/plugins/zsh-autosuggestions
# git clone https://github.com/zsh-users/zsh-syntax-highlighting.git ~/.oh-my-zsh/custom/plugins/zsh-syntax-highlighting

export ZSH="$HOME/.oh-my-zsh"
plugins=(git zsh-autosuggestions zsh-syntax-highlighting)
source $ZSH/oh-my-zsh.sh

# Aliases
source $HOME/git/toolbox/aliases/my_aliases.sh
source $HOME/git/toolbox/aliases/git_aliases.sh

# Exports
export EDITOR='fresh'
export VISUAL='fresh'
export PATH="$HOME/.local/bin:$PATH"

# Prompt
autoload -Uz vcs_info
precmd_vcs_info() { vcs_info }
precmd_functions+=( precmd_vcs_info )
setopt prompt_subst
zstyle ':vcs_info:git:*' formats '%F{yellow}(%b)%f'

PROMPT='%F{cyan}%~%f ${vcs_info_msg_0_}%F{green}‚ùØ%f '
RPROMPT='%F{white}%*%f'  # Right prompt with time
